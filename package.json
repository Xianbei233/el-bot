{
  "name": "el-bot",
  "version": "0.7.0-alpha.5",
  "description": "A quick qq bot framework for mirai.",
  "main": "dist/index.js",
  "engines": {
    "node": ">=14.15"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "el": "dist/cli/index.js"
  },
  "mcl": {
    "folder": "mcl"
  },
  "scripts": {
    "build": "yarn clean && tsc",
    "build:mirai-ts": "cd packages/mirai-ts && yarn build",
    "build:docs": "typedoc",
    "clean": "rm -rf dist",
    "bot": "ts-node bot/index.ts",
    "dev": "npm-run-all --parallel dev:*",
    "dev:bot": "cross-env NODE_ENV=dev ts-node-dev bot/index.ts",
    "dev:plugins": "cd packages/el-bot-plugins && yarn watch",
    "lint": "eslint src --ext .ts --fix && prettier --write .",
    "start": "npm-run-all --parallel start:*",
    "start:bot": "yarn build && cross-env NODE_ENV=production node dist/index.js",
    "start:mcl": "el start mcl",
    "mcl": "cd mcl && ./mcl",
    "test": "yarn lint",
    "watch": "tsc --watch",
    "watch:mirai-ts": "cd packages/mirai-ts && tsc --watch",
    "prepublishOnly": "yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YunYouJun/el-bot"
  },
  "keywords": [
    "el-bot",
    "elpsy",
    "bot",
    "mirai",
    "qq",
    "framework"
  ],
  "author": {
    "name": "云游君",
    "email": "me@yunyoujun.cn",
    "url": "https://www.yunyoujun.cn"
  },
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/YunYouJun/el-bot/issues"
  },
  "homepage": "https://docs.bot.elpsy.cn/",
  "peerDependencies": {
    "rss-feed-emitter": "3.2.2",
    "sagiri": "3.1.1"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@octokit/webhooks": "^7.23.0",
    "chalk": "^4.0.0",
    "commander": "^7.0.0",
    "dayjs": "^1.10.4",
    "download": "^8.0.0",
    "glob": "^7.1.6",
    "html-to-text": "^6.0.0",
    "inquirer": "^7.3.3",
    "js-yaml": "^4.0.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "mirai-ts": "1.0.0-alpha.5",
    "mongoose": "^5.11.14",
    "node-schedule": "^2.0.0",
    "progress": "^2.0.3",
    "qrcode": "^1.4.4",
    "rss-parser": "^3.10.0",
    "shelljs": "^0.8.4",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@octokit/webhooks-definitions": "^3.57.0",
    "@types/download": "^6.2.4",
    "@types/html-to-text": "^6.0.0",
    "@types/inquirer": "^7.3.1",
    "@types/js-yaml": "^4.0.0",
    "@types/koa": "^2.11.7",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa__cors": "^3.0.2",
    "@types/node": "^14.14.22",
    "@types/node-schedule": "^1.3.1",
    "@types/progress": "^2.0.3",
    "@types/qrcode": "^1.3.5",
    "@types/shelljs": "^0.8.8",
    "@types/xml2js": "^0.4.8",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-node-dev": "1.1.1",
    "typedoc": "^0.20.20",
    "typescript": "^4.1.3"
  },
  "directories": {
    "lib": "https://github.com/YunYouJun/mirai-ts"
  },
  "ecosystem": {
    "el-bot-api": "https://github.com/ElpsyCN/el-bot-api",
    "el-bot-plugins": "https://github.com/ElpsyCN/el-bot-plugins",
    "el-bot-docs": "https://github.com/ElpsyCN/el-bot-docs",
    "el-bot-template": "https://github.com/ElpsyCN/el-bot-template",
    "el-bot-web": "https://github.com/ElpsyCN/el-bot-web"
  }
}
